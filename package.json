{
  "name": "tekko",
  "version": "0.0.0-development",
  "description": "Another IRC message parser and formatter",
  "author": "Alexandre Breteau <contact@seldszar.fr>",
  "license": "MIT",
  "main": "dist/index.js",
  "types": "types",
  "homepage": "https://github.com/seldszar/tekko#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/seldszar/tekko.git"
  },
  "bugs": {
    "url": "https://github.com/seldszar/tekko/issues"
  },
  "files": [
    "dist",
    "types",
    "LICENSE",
    "README.md"
  ],
  "keywords": [
    "formatter",
    "irc",
    "message",
    "parser"
  ],
  "engine": {
    "node": ">=8.0.0"
  },
  "scripts": {
    "build": "tsc",
    "lint": "eslint --format codeframe src/**/*",
    "release": "npm run build && semantic-release",
    "test": "jest"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.0.0",
    "@commitlint/config-conventional": "^8.0.0",
    "@types/jest": "^24.0.15",
    "@types/node": "^12.0.8",
    "@typescript-eslint/eslint-plugin": "^1.10.2",
    "@typescript-eslint/parser": "^1.10.2",
    "eslint": "^5.10.0",
    "eslint-config-prettier": "^6.0.0",
    "eslint-plugin-prettier": "^3.1.0",
    "husky": "^2.7.0",
    "jest": "^24.8.0",
    "lint-staged": "^8.2.1",
    "prettier": "^1.18.2",
    "semantic-release": "^15.13.18",
    "ts-jest": "^24.0.2",
    "ts-node": "^8.3.0",
    "typescript": "3.5.2"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": "eslint --format codeframe"
  }
}
